#!/bin/sh

CONTEXT=""
KUBECONFIG=""
NODE=""
NAMESPACE=""
while [ $# -gt 0 ]; do
  key="$1"

  case $key in
  --context)
    CONTEXT="--context $2"
    shift
    shift
    ;;
  --kubeconfig)
    KUBECONFIG="--kubeconfig $2"
    shift
    shift
    ;;
  -n | --namespace)
    NAMESPACE="--namespace $2"
    shift
    shift
    ;;
  *)
    NODE="$1"
    shift
    ;;
  esac
done

if [ -z "$NODE" ]; then
  echo "Please specify node name"
  exit 1
fi

IMAGE="docker.io/library/alpine"
POD="nsenter-$(env LC_ALL=C tr -dc a-z0-9 < /dev/urandom | head -c 6)"

# Check the node
kubectl get node "$NODE" $CONTEXT $KUBECONFIG >/dev/null || exit 1

OVERRIDES="$(
  cat <<EOT
{
  "spec": {
    "nodeName": "$NODE",
    "hostPID": true,
    "containers": [
      {
        "securityContext": {
          "privileged": true
        },
        "image": "$IMAGE",
        "name": "nsenter",
        "stdin": true,
        "stdinOnce": true,
        "tty": true,
        "command": [ "nsenter", "--target", "1", "--mount", "--uts", "--ipc", "--net", "--pid", "--", "bash", "-l" ]
      }
    ]
  }
}
EOT
)"

echo "spawning \"$POD\" on \"$NODE\""
kubectl run --rm --image "$IMAGE" --overrides="$OVERRIDES" --generator=run-pod/v1 -ti "$POD" $CONTEXT $KUBECONFIG $NAMESPACE
